<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Simple App 3</display-name>
    
    <servlet>
        <servlet-name>App3Servlet</servlet-name>
        <servlet-class>App3Servlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>App3Servlet</servlet-name>
        <url-pattern>/api</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>App3Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>